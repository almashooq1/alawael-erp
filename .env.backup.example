# BACKUP SYSTEM ENVIRONMENT CONFIGURATION
# إعدادات متغيرات البيئة لنظام النسخ الاحتياطي

# ═══════════════════════════════════════════════════════════════════════
# 1. BACKUP STORAGE CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# تكوين تخزين النسخ الاحتياطية
# ═══════════════════════════════════════════════════════════════════════

# المسار المحلي لتخزين النسخ الاحتياطية
# Local storage path for backups
BACKUP_STORAGE_PATH=./backups

# الحد الأقصى للنسخ الاحتياطية المحفوظة
# Maximum number of backups to keep
MAX_BACKUPS=10

# عدد أيام الاحتفاظ بالنسخ الاحتياطية
# Number of days to retain backups
BACKUP_RETENTION_DAYS=30

# تفعيل/تعطيل النسخ الاحتياطية التلقائية
# Enable/disable automatic backups
ENABLE_AUTO_BACKUP=true

# ═══════════════════════════════════════════════════════════════════════
# 2. ENCRYPTION CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات التشفير (32 بايت HEX)
# ═══════════════════════════════════════════════════════════════════════

# مفتاح التشفير AES-256 (يجب أن يكون 64 حرف HEX = 32 بايت)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BACKUP_ENCRYPTION_KEY=your-32-byte-hex-key-here-please-replace-with-actual-key

# ═══════════════════════════════════════════════════════════════════════
# 3. DATABASE CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات قاعدة البيانات
# ═══════════════════════════════════════════════════════════════════════

# اتصال MongoDB
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/erp_db

# أو استخدم المكونات التالية:
# Or use the following components:
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=erp_db
MONGODB_USERNAME=
MONGODB_PASSWORD=

# ═══════════════════════════════════════════════════════════════════════
