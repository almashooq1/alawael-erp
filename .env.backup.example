# ═══════════════════════════════════════════════════════════════════════
# 6. AZURE STORAGE CONFIGURATION (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات Azure Storage (اختياري)
# ═══════════════════════════════════════════════════════════════════════

# اسم حساب Azure Storage
# Azure storage account name
AZURE_STORAGE_ACCOUNT=mystorageaccount

# مفتاح حساب Azure Storage
# Azure storage account key
AZURE_STORAGE_KEY=DefaultEndpointsProtocol=https;AccountName=...

# اسم حاوية Azure
# Azure container name
AZURE_STORAGE_CONTAINER=backups

# ═══════════════════════════════════════════════════════════════════════
# 7. NOTIFICATION CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات الإخطارات
# ═══════════════════════════════════════════════════════════════════════

# تفعيل الإخطارات البريدية
# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# عنوان البريد الإلكتروني لإرسال الإخطارات
# Email address to send notifications
BACKUP_ALERT_EMAIL=admin@example.com

# خادم SMTP
# SMTP server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# تفعيل إخطارات SMS (اختياري)
# Enable SMS notifications (optional)
ENABLE_SMS_NOTIFICATIONS=false
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-account-sid
SMS_AUTH_TOKEN=your-auth-token

# ═══════════════════════════════════════════════════════════════════════
# 8. MONITORING CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات المراقبة
# ═══════════════════════════════════════════════════════════════════════

# فترة الفحص الصحي بالدقائق
# Health check interval in minutes
HEALTH_CHECK_INTERVAL=5

# فترة جمع المقاييس بالدقائق
# Metrics collection interval in minutes
METRICS_COLLECTION_INTERVAL=1

# فترة معالجة التنبيهات بالثواني
# Alert processing interval in seconds
ALERT_PROCESSING_INTERVAL=30

# حد تنبيه مساحة القرص (GB)
# Disk space alert threshold (GB)
DISK_SPACE_ALERT_THRESHOLD=100

# ═══════════════════════════════════════════════════════════════════════
# 9. BACKUP SCHEDULING
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# جدولة النسخ الاحتياطية
# ═══════════════════════════════════════════════════════════════════════

# تعبير CRON لجدولة النسخ الاحتياطية (الافتراضي: 2 صباحاً يومياً)
# CRON expression for backup scheduling (default: 2 AM daily)
# Format: minute hour day month weekday
# Example: 0 2 * * * = every day at 2 AM
BACKUP_CRON_EXPRESSION=0 2 * * *

# ═══════════════════════════════════════════════════════════════════════
# 10. LOGGING CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات التسجيل
# ═══════════════════════════════════════════════════════════════════════

# مستوى التسجيل (debug, info, warn, error)
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# مسار ملف السجل
# Log file path
LOG_FILE_PATH=./logs/backup.log

# حجم ملف السجل الأقصى (MB)
# Maximum log file size (MB)
LOG_MAX_SIZE=50

# عدد ملفات السجل المحفوظة
# Number of log files to keep
LOG_MAX_FILES=10

# ═══════════════════════════════════════════════════════════════════════
# 11. DEVELOPMENT/PRODUCTION SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# إعدادات التطوير/الإنتاج
# ═══════════════════════════════════════════════════════════════════════

# بيئة التشغيل
# Node environment
NODE_ENV=production

# تفعيل وضع التصحيح
# Enable debug mode
DEBUG=false

