# Barcode System Environment Configuration

# Backend Configuration
BARCODE_API_PREFIX=/api/barcodes

# Barcode Settings
BARCODE_CODE_PREFIX=SYS
BARCODE_CODE_LENGTH=8
BARCODE_DEFAULT_TYPE=CODE128
BARCODE_DEFAULT_ENTITY=PRODUCT

# Batch Settings
BARCODE_BATCH_MIN_QUANTITY=1
BARCODE_BATCH_MAX_QUANTITY=1000
BARCODE_BATCH_DEFAULT_QUANTITY=10

# QR Code Settings
BARCODE_QR_ERROR_CORRECTION=M
BARCODE_QR_VERSION=auto

# Scan Settings
BARCODE_SCAN_TRACKING_ENABLED=true
BARCODE_SCAN_LOCATION_REQUIRED=false
BARCODE_SCAN_DEVICE_TRACKING=true

# Expiration Settings
BARCODE_DEFAULT_EXPIRATION_DAYS=365
BARCODE_EXPIRATION_ALERT_DAYS=30
BARCODE_ENABLE_EXPIRATION_CHECK=true

# Performance Settings
BARCODE_CACHE_TTL=3600
BARCODE_PAGINATION_DEFAULT_LIMIT=10
BARCODE_PAGINATION_MAX_LIMIT=100

# Security Settings
BARCODE_REQUIRE_AUTH=true
BARCODE_ENABLE_AUDIT_LOG=true
BARCODE_ENABLE_RATE_LIMITING=true
BARCODE_RATE_LIMIT_WINDOW=60
BARCODE_RATE_LIMIT_MAX_REQUESTS=100

# Export Settings
BARCODE_EXPORT_FORMAT=csv
BARCODE_EXPORT_MAX_RECORDS=10000
BARCODE_ENABLE_PDF_EXPORT=false

# Email Notifications (Optional)
BARCODE_ENABLE_EMAIL_NOTIFICATIONS=false
BARCODE_NOTIFICATION_EMAIL_FROM=noreply@barcodes.local

# Logging
BARCODE_LOG_LEVEL=info
BARCODE_ENABLE_DEBUG_MODE=false

# Frontend Configuration
REACT_APP_BARCODE_API_URL=http://localhost:3002/api/barcodes
REACT_APP_BARCODE_ENABLE_SCANNER=true
REACT_APP_BARCODE_ENABLE_BATCH=true
REACT_APP_BARCODE_ENABLE_ANALYTICS=true
REACT_APP_BARCODE_PAGES_PER_LOAD=10

# Supported Barcode Types
BARCODE_TYPES=CODE128,CODE39,EAN13,EAN8,UPC,QR,DATAMATRIX

# Supported Entity Types
BARCODE_ENTITY_TYPES=PRODUCT,VEHICLE,ASSET,EMPLOYEE,STUDENT,PATIENT,INVOICE,SHIPMENT,PACKAGE,CUSTOM

# Status Options
BARCODE_STATUS_OPTIONS=ACTIVE,INACTIVE,ARCHIVED,REVOKED

# Actions for Scan History
BARCODE_ACTIONS=SCAN,PICKUP,DELIVERY,VERIFY,REPAIR,ARCHIVE,RECALL

# Advanced Features
BARCODE_ENABLE_MULTI_TENANCY=false
BARCODE_ENABLE_API_VERSIONING=false
BARCODE_ENABLE_WEBHOOK_NOTIFICATIONS=false
BARCODE_ENABLE_SYNC_TO_EXTERNAL=false
