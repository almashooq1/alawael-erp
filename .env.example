# SAMA Banking Integration - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Application Environment
# ============================================
NODE_ENV=production
API_PORT=3000
API_HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================
MONGO_URI=mongodb://username:password@localhost:27017/sama_banking?authSource=admin
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_password_here
MONGO_DB=sama_banking

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_PASSWORD=redis_secure_password

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production_at_least_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# ============================================
# Encryption Configuration
# ============================================
# Generate with: openssl rand -hex 16 for IV and openssl rand -hex 32 for KEY
ENCRYPTION_KEY=your_32_character_encryption_key_here_please_change
ENCRYPTION_IV=your_16_character_iv_here
ENCRYPTION_ALGORITHM=aes-256-cbc

# ============================================
# SAMA API Configuration
# ============================================
SAMA_MOCK_MODE=true
SAMA_API_URL=https://api.sama.example.com
SAMA_API_KEY=your_sama_api_key_here
SAMA_API_SECRET=your_sama_api_secret_here
SAMA_API_TIMEOUT=30000
SAMA_API_RETRY_ATTEMPTS=3
SAMA_API_RETRY_DELAY=1000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3001,https://app.sama.example.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ============================================
# Email/SMTP Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@sama-banking.example.com

# ============================================
# SMS Configuration (Optional)
# ============================================
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# ============================================
# AWS S3 Configuration (Optional)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=sama-banking-bucket

# ============================================
# Firebase Configuration (Optional)
# ============================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ============================================
# Frontend Configuration
# ============================================
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_ENV=production
REACT_APP_VERSION=1.0.0
REACT_APP_ENABLE_ANALYTICS=true

# ============================================
# Monitoring & Analytics
# ============================================
SENTRY_DSN=https://your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ============================================
# Security
# ============================================
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
HELMET_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# ============================================
# Feature Flags
# ============================================
FEATURE_FRAUD_DETECTION=true
FEATURE_FINANCIAL_INTELLIGENCE=true
FEATURE_SCHEDULED_PAYMENTS=true
FEATURE_COMPLIANCE_REPORTING=true

# ============================================
# AML/CFT Configuration
# ============================================
AML_RISK_THRESHOLD=70
CFT_RISK_THRESHOLD=75
AML_SAR_THRESHOLD=10000
AML_MONITORING_ENABLED=true

# ============================================
# Maintenance Mode
# ============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance

# ============================================
# Developer Settings
# ============================================
DEBUG_MODE=false
ENABLE_SWAGGER_DOCS=true
ENABLE_PROFILING=false
AUTO_SYNC_SAMA_API=false
