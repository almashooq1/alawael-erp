# نظام إدارة إعادة تأهيل المركبات - ملف الإعدادات المثال
# Vehicle Rehabilitation Management System - Environment Variables Example

# ============================================
# تشغيل | Environment
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# قاعدة البيانات | Database Configuration
# ============================================
MONGODB_URI=mongodb://admin:password@mongo:27017/alaweal_db?authSource=admin
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB_NAME=alaweal_db

# ============================================
# ريديس | Redis Cache
# ============================================
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=redis_password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=50
REDIS_ENABLE_OFFLINE_QUEUE=false
DISABLE_REDIS=false

# ============================================
# المصادقة | Authentication
# ============================================
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production_12345678901234567890
JWT_EXPIRY=3600
REFRESH_TOKEN_SECRET=your_refresh_token_secret_must_be_different_from_jwt_secret
REFRESH_TOKEN_EXPIRY=604800
JWT_ALGORITHM=HS256
JWT_ISSUER=alawael-erp-system
JWT_AUDIENCE=alawael-erp-users

# ============================================
# الواجهات البرمجية | API Configuration
# ============================================
API_BASE_URL=http://localhost:3001/api/v1
API_VERSION=v1
API_PORT=3001
API_CORS_ORIGIN=http://localhost:3000,https://rehab-system.sa

# ============================================
# الواجهة الأمامية | Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# ============================================
# السجلات | Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ============================================
# البريد الإلكتروني | Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@rehab-system.sa
SMTP_FROM_NAME=Vehicle Rehabilitation System

# ============================================
# التخزين السحابي | Cloud Storage (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rehab-system-documents
AWS_S3_UPLOAD_FOLDER=uploads/

# ============================================
# المراقبة | Monitoring & Analytics
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
DATADOG_API_KEY=
DATADOG_APP_KEY=
ENABLE_MONITORING=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_REQUEST_LOGGING=true
METRICS_PORT=9090

# ============================================
# المعايير السعودية | Saudi Compliance
# ============================================
ENABLE_SAUDI_COMPLIANCE=true
COMPLIANCE_CHECK_INTERVAL=3600
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# ============================================
# الأمان | Security
# ============================================
ENABLE_HTTPS=true
ENABLE_CORS=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_change_this
SESSION_TIMEOUT=1800
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true
ENABLE_XSS_PROTECTION=true
MAX_REQUEST_SIZE=10mb
ENABLE_IP_WHITELIST=false
TRUSTED_PROXIES=

# ============================================
# الموارد البشرية | HR Integration
# ============================================
ENABLE_HR_INTEGRATION=false
HR_SYSTEM_URL=
HR_API_KEY=

# ============================================
# التقارير | Reporting
# ============================================
ENABLE_ADVANCED_REPORTS=true
REPORT_GENERATION_TIMEOUT=30000
REPORT_MAX_RECORDS=100000

# ============================================
# المميزات | Feature Flags
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_BULK_OPERATIONS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADVANCED_FILTERING=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_API_DOCUMENTATION=true

# ============================================
# التطوير | Development Only
# ============================================
DEBUG=false
MOCK_DATA=false
ALLOW_TEST_ENDPOINTS=false
DEVELOPMENT_MODE=false

# ============================================
# الأداء | Performance
# ============================================
CONNECTION_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_TIMEOUT=30000
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
ENABLE_CLUSTERING=false
CLUSTER_WORKERS=4
API_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000
