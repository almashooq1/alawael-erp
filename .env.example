# نظام إدارة إعادة تأهيل المركبات - ملف الإعدادات المثال
# Vehicle Rehabilitation Management System - Environment Variables Example

# ============================================
# تشغيل | Environment
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# قاعدة البيانات | Database Configuration
# ============================================
MONGODB_URI=mongodb://admin:password@mongodb:27017/rehab_system?authSource=admin
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB_NAME=rehab_system

# ============================================
# ريديس | Redis Cache
# ============================================
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# المصادقة | Authentication
# ============================================
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production_12345678901234567890
JWT_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=604800

# ============================================
# الواجهات البرمجية | API Configuration
# ============================================
API_BASE_URL=http://localhost:3001/api/v1
API_VERSION=v1
API_PORT=3001
API_CORS_ORIGIN=http://localhost:3000,https://rehab-system.sa

# ============================================
# الواجهة الأمامية | Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# ============================================
# السجلات | Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ============================================
# البريد الإلكتروني | Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@rehab-system.sa
SMTP_FROM_NAME=Vehicle Rehabilitation System

# ============================================
# التخزين السحابي | Cloud Storage (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rehab-system-documents
AWS_S3_UPLOAD_FOLDER=uploads/

# ============================================
# المراقبة | Monitoring & Analytics
# ============================================
SENTRY_DSN=
DATADOG_API_KEY=
DATADOG_APP_KEY=

# ============================================
# المعايير السعودية | Saudi Compliance
# ============================================
ENABLE_SAUDI_COMPLIANCE=true
COMPLIANCE_CHECK_INTERVAL=3600
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# ============================================
# الأمان | Security
# ============================================
ENABLE_HTTPS=true
ENABLE_CORS=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_change_this
SESSION_TIMEOUT=1800
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ============================================
# الموارد البشرية | HR Integration
# ============================================
ENABLE_HR_INTEGRATION=false
HR_SYSTEM_URL=
HR_API_KEY=

# ============================================
# التقارير | Reporting
# ============================================
ENABLE_ADVANCED_REPORTS=true
REPORT_GENERATION_TIMEOUT=30000
REPORT_MAX_RECORDS=100000

# ============================================
# المميزات | Feature Flags
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_BULK_OPERATIONS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADVANCED_FILTERING=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_API_DOCUMENTATION=true

# ============================================
# التطوير | Development Only
# ============================================
DEBUG=false
MOCK_DATA=false
ALLOW_TEST_ENDPOINTS=false
DEVELOPMENT_MODE=false

# ============================================
# الأداء | Performance
# ============================================
CONNECTION_POOL_SIZE=10
CACHE_TTL=3600
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
