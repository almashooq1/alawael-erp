# متغيرات البيئة للإنتاج - نظام ERP مراكز الأوائل

# قاعدة البيانات
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# مفاتيح الأمان (يجب تغييرها في الإنتاج)
SECRET_KEY=your-super-secret-production-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-production-key-change-this-in-production

# إعدادات Flask
FLASK_ENV=production
FLASK_DEBUG=False

# إعدادات البريد الإلكتروني
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# إعدادات التطبيق
APP_NAME=نظام ERP مراكز الأوائل
COMPANY_NAME=مراكز الأوائل للتأهيل
SUPPORT_EMAIL=support@alawael.com

# إعدادات الأمان
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# إعدادات الملفات
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# إعدادات المنطقة الزمنية
TIMEZONE=Asia/Riyadh
