# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Frontend Configuration
REACT_APP_API_URL=https://api.alawael.com/api
REACT_APP_SOCKET_URL=https://api.alawael.com

# Database Configuration - MongoDB (Atlas)
MONGO_URI=mongodb+srv://alawael_admin:STRONG_PASSWORD_HERE@alawael-prod.mongodb.net/alawael_production?retryWrites=true&w=majority
MONGO_ROOT_USER=alawael_admin
MONGO_ROOT_PASSWORD=STRONG_PASSWORD_HERE
MONGO_DATABASE=alawael_production
MONGO_REPLICA_SET=rs0

# Redis Configuration (Production)
REDIS_HOST=redis-prod.yourdomain.com
REDIS_PORT=6379
REDIS_PASSWORD=VERY_STRONG_REDIS_PASSWORD_HERE
REDIS_DB=0
REDIS_TLS=true

# JWT Configuration
JWT_SECRET=VERY_STRONG_JWT_SECRET_KEY_PROD_2026_!@#$%^&*()_+EXTRA_LONG
JWT_REFRESH_SECRET=VERY_STRONG_JWT_REFRESH_SECRET_PROD_2026_!@#$%^&*()_+EXTRA_LONG
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=90d

# Session Configuration
SESSION_SECRET=VERY_STRONG_SESSION_SECRET_PROD_2026_!@#$%^&*()_+EXTRA_LONG

# Email Configuration (Production)
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=noreply@alawael.com
EMAIL_PASS=MAILGUN_PASSWORD_HERE
EMAIL_FROM=Alawael <noreply@alawael.com>

# SMS Configuration (Twilio - Production)
TWILIO_ACCOUNT_SID=PRODUCTION_ACCOUNT_SID
TWILIO_AUTH_TOKEN=PRODUCTION_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+966501234567

# AWS S3 Configuration (Production)
AWS_REGION=me-south-1
AWS_S3_BUCKET=alawael-production-bucket
AWS_ACCESS_KEY_ID=PRODUCTION_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=PRODUCTION_SECRET_ACCESS_KEY
AWS_S3_ENDPOINT=https://s3.me-south-1.amazonaws.com

# Monitoring Configuration (Production)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=VERY_STRONG_GRAFANA_PASSWORD
GRAFANA_ADMIN_EMAIL=admin@alawael.com

# Prometheus Configuration
PROMETHEUS_RETENTION=30d
PROMETHEUS_SCRAPE_INTERVAL=30s

# ELK Stack Configuration
ELASTICSEARCH_PASSWORD=VERY_STRONG_ELASTIC_PASSWORD
KIBANA_ADMIN_PASSWORD=VERY_STRONG_KIBANA_PASSWORD

# Nginx Configuration (Production)
NGINX_HOST=api.alawael.com
NGINX_PORT=443
NGINX_SSL_CERTIFICATE=/etc/letsencrypt/live/api.alawael.com/fullchain.pem
NGINX_SSL_CERTIFICATE_KEY=/etc/letsencrypt/live/api.alawael.com/privkey.pem

# Backup Configuration (Production)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_LOCATION=/backups/production
BACKUP_COMPRESS=true

# Logging Configuration (Production)
LOG_LEVEL=error
LOG_FORMAT=json
LOG_FILE=/var/log/alawael/production.log

# API Configuration (Production)
API_RATE_LIMIT=1000
API_TIMEOUT=60000
API_MAX_PAYLOAD_SIZE=50mb

# Security Configuration (Production)
CORS_ORIGIN=https://alawael.com,https://www.alawael.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# Application Configuration
APP_NAME=Alawael
APP_VERSION=2.0.0
APP_ENVIRONMENT=production
APP_DEBUG=false

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_AI_PREDICTIONS=true
FEATURE_GAMIFICATION=true

# Default Settings
DEFAULT_LANGUAGE=ar
DEFAULT_TIMEZONE=Asia/Riyadh
DEFAULT_CURRENCY=SAR

