# ═══════════════════════════════════════════════════════
# .env.staging - بيئة الاختبار النهائية
# ═══════════════════════════════════════════════════════

# Server Configuration
NODE_ENV=staging
PORT=3001
HOST=0.0.0.0

# Frontend Configuration
REACT_APP_API_URL=http://staging-api.yourdomain.com/api
REACT_APP_SOCKET_URL=http://staging-api.yourdomain.com

# Database Configuration - MongoDB
MONGO_URI=mongodb://root:staging_password_123@mongodb:27017/alawael_staging?authSource=admin
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=staging_password_123
MONGO_DATABASE=alawael_staging
MONGO_REPLICA_SET=rs0

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_pass_456
REDIS_DB=0

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_2026_!@#$%^&*()_+
JWT_REFRESH_SECRET=staging_jwt_refresh_secret_2026_!@#$%^&*()_+
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# Session Configuration
SESSION_SECRET=staging_session_secret_2026_!@#$%^&*()_+

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=staging-notifications@gmail.com
EMAIL_PASS=staging_email_password_789
EMAIL_FROM=Alawael <staging-notifications@gmail.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=staging_account_sid
TWILIO_AUTH_TOKEN=staging_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 Configuration
AWS_REGION=me-south-1
AWS_S3_BUCKET=alawael-staging-bucket
AWS_ACCESS_KEY_ID=staging_access_key_id
AWS_SECRET_ACCESS_KEY=staging_secret_access_key
AWS_S3_ENDPOINT=https://s3.me-south-1.amazonaws.com

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=staging_grafana_pass_101
GRAFANA_ADMIN_EMAIL=admin@alawael-staging.com

# Prometheus Configuration
PROMETHEUS_RETENTION=7d
PROMETHEUS_SCRAPE_INTERVAL=15s

# ELK Stack Configuration
ELASTICSEARCH_PASSWORD=staging_elastic_pass_202
KIBANA_ADMIN_PASSWORD=staging_kibana_pass_303

# Nginx Configuration
NGINX_HOST=staging-api.yourdomain.com
NGINX_PORT=443
NGINX_SSL_CERTIFICATE=/etc/letsencrypt/live/staging-api.yourdomain.com/fullchain.pem
NGINX_SSL_CERTIFICATE_KEY=/etc/letsencrypt/live/staging-api.yourdomain.com/privkey.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups
BACKUP_COMPRESS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/alawael/staging.log

# API Configuration
API_RATE_LIMIT=100 # requests per minute
API_TIMEOUT=30000 # milliseconds
API_MAX_PAYLOAD_SIZE=10mb

# Security Configuration
CORS_ORIGIN=http://staging.yourdomain.com,https://staging-api.yourdomain.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
HELMET_CONTENT_SECURITY_POLICY=true

# Application Configuration
APP_NAME=Alawael
APP_VERSION=2.0.0
APP_ENVIRONMENT=staging
APP_DEBUG=false

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_AI_PREDICTIONS=true
FEATURE_GAMIFICATION=true
FEATURE_COMMUNICATIONS=true
FEATURE_DOCUMENTS=true
FEATURE_ELEARNING=true
FEATURE_TRANSPORT=true
FEATURE_CRM=true

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/staging/webhook/url
SLACK_CHANNEL=#staging-alerts
SLACK_USERNAME=Alawael-Bot

# Sentry Error Tracking (optional)
SENTRY_DSN=https://staging@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# File Upload Configuration
UPLOAD_MAX_SIZE=50mb
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
UPLOAD_DIRECTORY=/uploads/staging

# Cache Configuration
CACHE_TTL=3600 # 1 hour
CACHE_MAX_SIZE=100mb

# Payment Gateway (if needed)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=pk_test_staging_key
STRIPE_SECRET_KEY=sk_test_staging_key

# Locale Configuration
DEFAULT_LANGUAGE=ar
DEFAULT_TIMEZONE=Asia/Riyadh
DEFAULT_CURRENCY=SAR

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 3 * * * # Daily at 3 AM

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs
SWAGGER_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=1000 # milliseconds

# Audit Logging
AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# ═══════════════════════════════════════════════════════
# End of Staging Configuration
# ═══════════════════════════════════════════════════════
