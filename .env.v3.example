# üîê Environment Variables for AlAwael ERP v3.0
# Copy this file to .env and update with your values

# ============================================
# Environment
# ============================================
NODE_ENV=production
TZ=Asia/Riyadh

# ============================================
# Security
# ============================================
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_minimum_32_characters
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_different_from_jwt_secret
ENCRYPTION_KEY=your_256_bit_encryption_key_for_sensitive_data_exactly_32_chars

# ============================================
# MongoDB
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=secure_mongo_password_change_this
MONGO_DB_NAME=alawael_db
MONGODB_URI=mongodb://admin:secure_mongo_password_change_this@mongodb:27017/alawael_db?authSource=admin

# ============================================
# PostgreSQL (Financial Data)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password_change_this
POSTGRES_DB=alawael_finance
POSTGRES_URL=postgresql://postgres:secure_postgres_password_change_this@postgres:5432/alawael_finance

# ============================================
# Redis (Cache & Sessions)
# ============================================
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_URL=redis://:secure_redis_password_change_this@redis:6379
REDIS_TTL=3600

# ============================================
# RabbitMQ (Message Queue)
# ============================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=secure_rabbitmq_password_change_this
RABBITMQ_URL=amqp://admin:secure_rabbitmq_password_change_this@rabbitmq:5672

# ============================================
# ElasticSearch (Search Engine)
# ============================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=alawael_search

# ============================================
# API Gateway
# ============================================
GATEWAY_PORT=8080
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# ============================================
# GraphQL
# ============================================
GRAPHQL_PORT=4000
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# ============================================
# Frontend URLs
# ============================================
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql
REACT_APP_WS_URL=ws://localhost:4000/graphql

# ============================================
# Monitoring
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password_change_this

# ============================================
# Email (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@alawael.sa

# ============================================
# Cloud Storage (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=me-south-1
AWS_S3_BUCKET=alawael-documents

# ============================================
# OAuth2 (Optional)
# ============================================
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# AI Services (Optional)
# ============================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
ENABLE_MONITORING=true

# ============================================
# Feature Flags
# ============================================
ENABLE_GRAPHQL=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_2FA=true
