            "url": {
              "raw": "{{sso_base_url}}/refresh-token",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "refresh-token"]
            }
          }
        },
        {
          "name": "Introspect Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{access_token}}\"\n}"
