  "item": [
    {
      "name": "SSO System",
      "description": "Single Sign-On API Endpoints",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{sso_base_url}}/health",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "health"]
            }
          }
        },
        {
          "name": "Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{sso_base_url}}/status",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "status"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"deviceId\": \"device_uuid\",\n  \"userAgent\": \"Mozilla/5.0\"\n}"
            },
            "url": {
              "raw": "{{sso_base_url}}/login",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{sso_base_url}}/logout",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "logout"]
            }
          }
        },
        {
          "name": "Logout All Sessions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{sso_base_url}}/logout-all",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "logout-all"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
