          "name": "OAuth2 Authorize",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{sso_base_url}}/oauth2/authorize?client_id=sso-client&redirect_uri=http://localhost:3000/callback&response_type=code&scope=openid profile email",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "oauth2", "authorize"],
              "query": [
                {
                  "key": "client_id",
                  "value": "sso-client"
                },
                {
                  "key": "redirect_uri",
                  "value": "http://localhost:3000/callback"
                },
                {
                  "key": "response_type",
                  "value": "code"
                },
                {
                  "key": "scope",
                  "value": "openid profile email"
                }
              ]
            }
          }
        },
        {
          "name": "OAuth2 Token Exchange",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grant_type\": \"authorization_code\",\n  \"code\": \"auth_code_from_authorize\",\n  \"client_id\": \"sso-client\",\n  \"client_secret\": \"secret\",\n  \"redirect_uri\": \"http://localhost:3000/callback\"\n}"
            },
            "url": {
              "raw": "{{sso_base_url}}/oauth2/token",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "oauth2", "token"]
            }
          }
        },
        {
          "name": "OAuth2 User Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{sso_base_url}}/oauth2/userinfo",
              "host": ["{{sso_base_url}}"],
              "path": ["api", "sso", "oauth2", "userinfo"]
            }
          }
        }
      ]
