# AlAwael ERP Backend - Production Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=3001
HOSTNAME=0.0.0.0

# ============================================
# Database Configuration
# ============================================
# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/alawael-db?retryWrites=true&w=majority

# Mock Database (set to false for production)
USE_MOCK_DB=false

# ============================================
# Authentication & Security
# ============================================
# JWT Configuration - CHANGE THESE VALUES!
JWT_SECRET=your_super_secret_jwt_key_change_this_immediately_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_immediately_in_production
JWT_EXPIRY=7d

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# ============================================
# Redis Cache (Optional)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# Email Service (Optional - Gmail/SendGrid)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# API Keys & Third-Party Services
# ============================================
# Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_public_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# Google Cloud (Optional)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/keyfile.json

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
DEBUG=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=pdf,doc,docx,xlsx,jpg,png,gif,zip

# ============================================
# Cache Configuration
# ============================================
CACHE_TTL=300
CACHE_PREFIX=cache:
CACHE_ENABLED=true

# ============================================
# Performance & Optimization
# ============================================
COMPRESSION_LEVEL=6
REQUEST_TIMEOUT=30000

# ============================================
# Security
# ============================================
HELMET_ENABLED=true
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ============================================
# Database Backup
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 0 * * * # Daily at midnight
BACKUP_DIR=backups/

# ============================================
# Analytics & Monitoring
# ============================================
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# ============================================
# Development/Testing (Set to false in production)
# ============================================
SEED_DATABASE=false
MOCK_EXTERNAL_APIS=false
ALLOW_TEST_ENDPOINTS=false

# ============================================
# Feature Flags
# ============================================
ENABLE_SOCKET_IO=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# ============================================
# Time Zone & Localization
# ============================================
TZ=Asia/Riyadh
LOCALE=ar-SA

# ============================================
# API Documentation
# ============================================
SWAGGER_ENABLED=true
SWAGGER_SERVER_URL=https://api.yourdomain.com

# ============================================
# Custom Settings
# ============================================
APP_NAME=AlAwael ERP
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@alawael.com
