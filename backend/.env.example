# AlAwael ERP Backend - Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=3001
HOSTNAME=0.0.0.0
LOG_LEVEL=info

# ============================================
# Database Configuration
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/alawael-db?retryWrites=true&w=majority
USE_MOCK_DB=false

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_immediately_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_immediately_in_production
JWT_EXPIRY=7d

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# ============================================
# Government Integration
# ============================================
GOV_API_URL=https://api.gov.sa
GOV_CLIENT_ID=your_government_client_id
GOV_CLIENT_SECRET=your_government_client_secret

# ============================================
# Insurance Integration
# ============================================
INSURANCE_API_URL=https://api.insurance.sa
INSURANCE_API_KEY=your_insurance_api_key
INSURANCE_CLIENT_ID=your_insurance_client_id
INSURANCE_CLIENT_SECRET=your_insurance_client_secret
INSURANCE_WEBHOOK_URL=https://yourdomain.com/webhooks/insurance
# ============================================
# Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_public_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# Google Cloud (Optional)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/keyfile.json

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
DEBUG=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=pdf,doc,docx,xlsx,jpg,png,gif,zip

# ============================================
# Cache Configuration
# ============================================
CACHE_TTL=300
CACHE_PREFIX=cache:
CACHE_ENABLED=true

# ============================================
# Performance & Optimization
# ============================================
COMPRESSION_LEVEL=6
REQUEST_TIMEOUT=30000

# ============================================
# Security
# ============================================
HELMET_ENABLED=true
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ============================================
# Database Backup
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 0 * * * # Daily at midnight
BACKUP_DIR=backups/

# ============================================
# Analytics & Monitoring
# ============================================
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# ============================================
# Development/Testing (Set to false in production)
# ============================================
SEED_DATABASE=false
MOCK_EXTERNAL_APIS=false
ALLOW_TEST_ENDPOINTS=false

# ============================================
# Feature Flags
# ============================================
ENABLE_SOCKET_IO=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# ============================================
# Time Zone & Localization
# ============================================
TZ=Asia/Riyadh
LOCALE=ar-SA

# ============================================
# API Documentation
# ============================================
SWAGGER_ENABLED=true
SWAGGER_SERVER_URL=https://api.yourdomain.com

# ============================================
# Laboratory Integration
# ============================================
LAB_API_URL=https://api.labs.sa
LAB_API_KEY=your_laboratory_api_key
LAB_FORMAT=json
LAB_CLIENT_CERT=/path/to/cert.pem
LAB_CLIENT_KEY=/path/to/key.pem
LAB_RECONCILIATION_INTERVAL=3600000
LAB_ORDER_TIMEOUT=86400000

# ============================================
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@alawael.com
