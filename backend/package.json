{
    "name": "alawael-erp-backend",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "start:prod": "NODE_ENV=production node server.js",
        "start:staging": "NODE_ENV=staging node server.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:integration": "jest --testPathPattern=tests/integration",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "format": "prettier --write \"**/*.{js,json,md}\"",
        "smoke:health": "node scripts/smoke-health.js",
        "db:seed": "node scripts/seed-database.js",
        "db:migrate": "node scripts/migrate.js",
        "cache:clear": "node scripts/clear-cache.js",
        "health:check": "node scripts/health-check.js",
        "health:check:json": "node scripts/health-check.js --json",
        "db:pool-config": "node scripts/db-pool-optimizer.js recommend",
        "db:pool-envvars": "node scripts/db-pool-optimizer.js envvars",
        "monitor:start": "pm2 start server.js --name alawael-backend",
        "monitor:stop": "pm2 stop alawael-backend",
        "monitor:logs": "pm2 logs alawael-backend",
        "docker:build": "docker build -t alawael-backend .",
        "docker:run": "docker-compose up -d",
        "docker:stop": "docker-compose down",
        "verify:deploy": "node scripts/verify-deployment.js"
    },
    "dependencies": {
        "@sendgrid/mail": "^8.1.6",
        "axios": "^1.13.2",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "cloudinary": "^2.9.0",
        "compression": "^1.8.1",
        "connect-redis": "^9.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "exceljs": "^4.4.0",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^8.2.1",
        "express-session": "^1.19.0",
        "firebase-admin": "^13.6.0",
        "form-data": "^4.0.5",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "ioredis": "^5.9.2",
        "jose": "^6.1.3",
        "jsonwebtoken": "^9.0.3",
        "moment": "^2.30.1",
        "mongodb-memory-server": "^10.4.3",
        "mongoose": "^9.1.4",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "node-mailjet": "^6.0.11",
        "nodemailer": "^7.0.12",
        "node-cache": "^5.1.2",
        "paypal-rest-sdk": "^1.8.1",
        "pdf-lib": "^1.17.1",
        "pdfkit": "^0.17.2",
        "pino": "^8.21.0",
        "pino-http": "^11.0.0",
        "puppeteer": "^24.36.0",
        "qrcode": "^1.5.4",
        "rate-limit-redis": "^4.3.1",
        "razorpay": "^2.9.6",
        "redis": "^5.10.0",
        "sendgrid": "^5.2.3",
        "socket.io": "^4.7.2",
        "speakeasy": "^2.0.0",
        "stripe": "^20.2.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "twilio": "^5.12.0",
        "uuid": "^8.3.2",
        "xss-clean": "^0.1.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.2.0",
        "express-validator": "^7.3.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.4"
    },
    "jest": {
        "globalSetup": "<rootDir>/jest.global-setup.js",
        "globalTeardown": "<rootDir>/jest.global-teardown.js",
        "setupFiles": [
            "<rootDir>/jest.env.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "testEnvironment": "node",
        "testTimeout": 30000,
        "coverageThreshold": {
            "global": {
                "branches": 15,
                "functions": 2,
                "lines": 20,
                "statements": 20
            }
        }
    }
}