# AGI System Configuration

# ====================================
# Server Configuration
# ====================================
AGI_PORT=5001
NODE_ENV=development

# ====================================
# ERP Integration (Rehab AGI)
# ====================================

# ERP API Configuration
ERP_API_URL=https://your-erp-system.com/api
ERP_API_KEY=your-secret-api-key-here
ERP_COMPANY_ID=COMP-001
ERP_BRANCH_ID=BRANCH-001

# Sync Settings
ERP_SYNC_ENABLED=true
ERP_AUTO_SYNC=true
ERP_SYNC_INTERVAL=3600000

# Retry Settings
ERP_RETRY_ATTEMPTS=3
ERP_RETRY_DELAY=2000
ERP_TIMEOUT=30000

# Logging
ERP_LOG_LEVEL=info
ERP_LOG_REQUESTS=true
ERP_LOG_RESPONSES=false

# Security
ERP_USE_SSL=true
ERP_VERIFY_CERTIFICATE=true

# Cache
ERP_CACHE_ENABLED=true
ERP_CACHE_TTL=300000

# ====================================
# Database Configuration (Optional)
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rehab_agi
DB_USER=postgres
DB_PASSWORD=your-db-password

# ====================================
# Security
# ====================================
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ====================================
# CORS
# ====================================
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# ====================================
# Cognitive Configuration
# ====================================
COGNITIVE_FREQUENCY=1000
MAX_WORKING_MEMORY=7
LEARNING_RATE=0.01
EXPLORATION_RATE=0.1

# Memory Configuration
MAX_EPISODIC_MEMORY=10000
MEMORY_CONSOLIDATION_INTERVAL=3600000

# Decision Configuration
DEFAULT_RISK_TOLERANCE=0.5
ETHICAL_THRESHOLD=0.6

# Reasoning Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MAX_REASONING_DEPTH=5

# Planning Configuration
DEFAULT_PLANNING_HORIZON=medium_term
MAX_PLAN_STEPS=100

# Creativity Configuration
NOVELTY_THRESHOLD=0.6
MAX_CREATIVE_ITERATIONS=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# CORS
CORS_ORIGIN=*
