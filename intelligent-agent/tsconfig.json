{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["backend/**/*", "src/**/*", "frontend/src/**/*", "frontend/components/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
