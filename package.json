{
  "name": "alaweal-center-management-system",
  "version": "2.1.0",
  "description": "Alaweal Center - نظام ERP موحد شامل ومتكامل (معاد البناء)",
  "main": "backend/api/app.js",
  "scripts": {
    "start": "node run-server.js",
    "start:backend": "node run-server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && nodemon server.js",
    "dev:frontend": "cd frontend/admin-dashboard && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend/admin-dashboard && npm run build",
    "build:backend": "node -e \"console.log('backend build skipped (no build step)')\"",
    "test": "jest -c backend/shared/jest.config.js",
    "test:watch": "jest -c backend/shared/jest.config.js --watch",
    "test:coverage": "jest -c backend/shared/jest.config.js --coverage",
    "test:verbose": "jest -c backend/shared/jest.config.js --verbose",
    "test:ci": "jest -c backend/shared/jest.config.js --ci --coverage --maxWorkers=2",
    "prepare": "husky install",
    "test:tracking": "powershell -ExecutionPolicy Bypass -File ./scripts/testing/test-request-tracking.ps1",
    "test:full": "powershell -ExecutionPolicy Bypass -File ./scripts/testing/test-full-system.ps1",
    "lint": "eslint backend/api",
    "lint:fix": "eslint backend/api --fix",
    "lint:check": "eslint backend/api --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint:check && npm run format:check && npm run test:ci",
    "validate:env": "node scripts/validate-env.js",
    "prestart": "npm run validate:env",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:prod": "./scripts/deployment/deploy-production.sh",
    "deploy:rollback": "./scripts/deployment/rollback.sh",
    "pre-deploy": "./scripts/deployment/pre-deploy.sh",
    "post-deploy": "./scripts/deployment/post-deploy.sh",
    "package": "./scripts/deployment/package-for-deployment.sh",
    "package:win": "powershell -ExecutionPolicy Bypass -File ./scripts/deployment/package-for-deployment.ps1"
  },
  "keywords": [
    "rehabilitation",
    "management",
    "system",
    "healthcare",
    "arabic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@microsoft/applicationinsights-react-native": "^4.3.8",
    "applicationinsights": "^3.12.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "fastify": "^5.6.2",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongodb-memory-server": "^9.1.3",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.20.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.3",
    "react-native-chart-kit": "^6.12.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-vector-icons": "^10.3.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.11.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react-native-vector-icons": "^6.4.18",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^24.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "redis": "^4.6.13"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,json,md}": [
      "prettier --write"
    ],
    "backend/api/**/*.js": [
      "eslint --fix --quiet --max-warnings=0"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}