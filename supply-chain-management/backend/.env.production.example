# Environment Configuration Template
# Copy this file to .env and fill in actual values

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/supply_chain_db
MONGODB_URI_TEST=mongodb://localhost:27017/supply_chain_test
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password
MONGODB_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Supply Chain System
SMTP_FROM_EMAIL=noreply@supplychainapi.local
ADMIN_EMAIL=admin@supplychainapi.local

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=900000
PASSWORD_RESET_EXPIRES=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Cors Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=1800000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./backend/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=supply-chain-bucket

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# Third Party APIs
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
SHIPMENT_TRACKING_API_KEY=
WEATHER_API_KEY=

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
DB_QUERY_TIMEOUT=5000

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000

# Payment Gateway
PAYMENT_PROVIDER=stripe
PAYMENT_API_KEY=

# Monitoring & Analytics
ENABLE_MONITORING=true
MONITORING_INTERVAL=60000
SENTRY_DSN=

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_URL=/api/docs

# Development
DEBUG=false
SEED_DATABASE=false

# Production Settings (for production environment only)
FORCE_HTTPS=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
