{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/src"
    ],
    "testMatch": [
        "**/__tests__/**/*.test.ts"
    ],
    "moduleFileExtensions": [
        "ts",
        "js",
        "json"
    ],
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.d.ts",
        "!src/infra/**",
        "!src/domain/**"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 60,
            "functions": 60,
            "lines": 60,
            "statements": 60
        }
    }
}